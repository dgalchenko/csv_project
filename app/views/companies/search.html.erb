<div class='container mt-5'>
  <h1 class='display-4'><%= t("companies.search.title") %></h1>
  <form>
    <div data-controller='search' class='mb-3'>
      <input type='text' class='form-control' data-action='input->search#perform' data-search-target='query' placeholder='<%= t("companies.search.placeholder") %>'>
    </div>
    <table class='table table-striped table-bordered mt-4'>
      <thead class='table-dark'>
        <tr>
          <th><%= t("active_record.attributes.company.registry_number") %></th>
          <th><%= t("active_record.attributes.company.company_name") %></th>
          <th><%= t("active_record.attributes.company.city") %></th>
        </tr>
      </thead>
      <tbody id='companies-list'>
        <%= render 'companies/search_results_list', companies: @companies || [] %>
      </tbody>
    </table>
  </form>
</div>